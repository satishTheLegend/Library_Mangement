<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:controls="clr-namespace:Library_Mangement.Controls"
             x:Class="Library_Mangement.Views.LandingView"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">
    <AbsoluteLayout>
        <Image
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Aspect="AspectFill"
            Opacity="{Binding LandingPageOpacity}"
            Source="Screen_2.jpg" />
        <Image
            x:Name="Logo"
            Opacity="{Binding LandingPageOpacity}"
            TranslationY="-50"
            Source="logo"
            WidthRequest="160"
            HeightRequest="160"
            AbsoluteLayout.LayoutBounds="0,0,1,.5"
            AbsoluteLayout.LayoutFlags="All"
            BackgroundColor="Transparent"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="CenterAndExpand" />

        <StackLayout IsVisible="{Binding LoaderVisible}"
            Margin="0,0,0,0"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            HorizontalOptions="CenterAndExpand"
            VerticalOptions="CenterAndExpand">
            <controls:Loader LoaderText="{Binding LoaderText}" AnimationAssetFileName="library_Loader.json" LoaderProgress="{Binding LoaderPercent}"></controls:Loader>
        </StackLayout>

        <StackLayout IsVisible="{Binding LandingPageEnable}"
            Margin="10,30,10,30" Opacity="{Binding LandingPageOpacity}"
            AbsoluteLayout.LayoutBounds="0,0,1,1"
            AbsoluteLayout.LayoutFlags="All"
            Spacing="20"
            VerticalOptions="EndAndExpand">
            <StackLayout
                Orientation="Vertical"
                Spacing="10"
                HorizontalOptions="FillAndExpand">
                <Button
                    x:Name="FaceButton"
                    TranslationY="-50"
                    Opacity="0"
                    HeightRequest="60" 
                    BackgroundColor="#3B5998"
                    CornerRadius="5"
                     Clicked="Login"
                    Text="LOGIN WITH FACEBOOK"
                    TextColor="White"
                    HorizontalOptions="FillAndExpand" />
                <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                    <Button
                        x:Name="LoginButton"
                        TranslationX="-50"
                        Opacity="0"
                        HeightRequest="60"
                        BackgroundColor="#FC5A5A"
                        CornerRadius="5"
                        Text="LOGIN"
                        Clicked="Login"
                        TextColor="White"
                        HorizontalOptions="FillAndExpand" />
                    <Button
                        x:Name="SignupButton"
                        TranslationX="50"
                        Opacity="0"
                        HeightRequest="60"
                        BackgroundColor="Transparent"
                        BorderColor="White"
                        BorderWidth="1"
                        CornerRadius="5"
                        Text="SIGN UP"
                        Command="{Binding SignUpCommand}"
                        TextColor="White"
                        HorizontalOptions="FillAndExpand" />
                </StackLayout>
            </StackLayout>
            <Label
                FontSize="10"
                TextColor="White"
                HorizontalOptions="CenterAndExpand"
                VerticalOptions="EndAndExpand">
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="By signing up, you agree with our " />
                        <Span
                            Text="Terms and Conditions"
                            TextColor="#FC5A5A"
                            TextDecorations="Underline" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </StackLayout>
    </AbsoluteLayout>
</ContentPage>