                            <Image Source="{Binding Book_ImageSource}" HeightRequest="110" BackgroundColor="Transparent"></Image>
                            <Label Text="{Binding Title}" FontSize="Small" LineBreakMode="TailTruncation" HorizontalTextAlignment="Center" FontAttributes="Bold"></Label>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </BindableLayout.ItemTemplate>
        </FlexLayout>
